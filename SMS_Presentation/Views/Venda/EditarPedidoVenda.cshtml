@using Presentation.Extensions
@using EntitiesServices.Work_Classes
@model SMS_Solution.ViewModels.PedidoVendaViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title"> 
        @if (ViewBag.StatusVenda == 1)
        {
            <h3 class="title">Oportunidades</h3>
        }
        else if (ViewBag.StatusVenda == 2)
        {
            <h3 class="title">Propostas</h3>
        }
        else if (ViewBag.StatusVenda == 3)
        {
            <h3 class="title">Pedidos de Venda</h3>
        }
        else if (ViewBag.StatusVenda == 4)
        {
            <h3 class="title">Faturamento</h3>
        }
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarAdmin", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                @if (ViewBag.StatusVenda == 1)
                 {
                     <a href="@Url.Action("MontarTelaPedidoVenda", "Venda", new { status = 1 })">Oportunidades</a>
                 }
                 else if (ViewBag.StatusVenda == 2)
                 {
                     <a href="@Url.Action("MontarTelaPedidoVenda", "Venda", new { status = 2 })">Propostas</a>
                 }
                 else if (ViewBag.StatusVenda == 3)
                 { 
                     <a href="@Url.Action("MontarTelaPedidoVenda", "Venda", new { status = 3 })">Pedidos de Venda</a>
                 }
                 else if (ViewBag.StatusVenda == 4)
                 { 
                     <a href="@Url.Action("MontarTelaPedidoVenda", "Venda", new { status = 4 })">Faturamento</a>
                 }
            </li>
            <li class="active">
                 @if (ViewBag.StatusVenda == 1)
                 {
                     <strong>Oportunidades - Consulta & Edição</strong>
                 }
                 else if (ViewBag.StatusVenda == 2)
                 {
                     <strong>Propostas - Consulta & Edição</strong>
                 }
                 else if (ViewBag.StatusVenda == 3)
                 { 
                     <strong>Pedidos de Venda - Consulta & Edição</strong>
                 }
                 else if (ViewBag.StatusVenda == 4)
                 { 
                     <strong>Faturamento - Consulta & Edição</strong>
                 }
            </li>
        </ol>
        <br />
    </div>

    @*INDICADORES*@
    <div class="row">
        <div class="col-lg-2">
            <div class="widget style1 lazur-bg">
                <div class="row vertical-align">
                    <div class="col-xs-3">
                        <i class="fa fa-thumbs-o-up fa-3x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <h3 class="font-normal">@Model.PEVE_DT_DATA.ToShortDateString()</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="widget style1 lazur-bg">
                <div class="row vertical-align">
                    <div class="col-xs-3">
                        <i class="fa fa-thumbs-o-up fa-3x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        @if (Model.PEVE_IN_STATUS == 2)
                        {
                            <h3 class="font-normal">Em Elaboração</h3>
                        }
                        else if (Model.PEVE_IN_STATUS == 3)
                        {
                            <h3 class="font-normal">Em aprovação</h3>
                        }
                        else if (Model.PEVE_IN_STATUS == 4)
                        {
                            <h3 class="font-normal">Em Execução</h3>
                        }
                        else if (Model.PEVE_IN_STATUS == 5)
                        {
                            <h3 class="font-normal">Encerrado</h3>
                        }
                        else if (Model.PEVE_IN_STATUS == 6)
                        {
                            <h3 class="font-normal">Cancelado</h3>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    @*TABS - PRINCIPAL*@
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                     @if (ViewBag.StatusVenda == 1)
                     {
                         <h5>Oportunidades - Edição</h5>
                     }
                     else if (ViewBag.StatusVenda == 2)
                     {
                         <h5>Propostas - Edição</h5>
                     }
                     else if (ViewBag.StatusVenda == 3)
                     { 
                         <h5>Pedidos de Venda - Edição</h5>
                     }
                     else if (ViewBag.StatusVenda == 4)
                     { 
