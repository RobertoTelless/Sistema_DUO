                                                                        <tr>
                                                                            <td>@cond.PEVA_NM_TITULO</td>
                                                                            <td>@cond.PEVA_DT_ANEXO.ToShortDateString()</td>
                                                                            @if (cond.PEVA_IN_TIPO == 1)
	                                                                        {
                                                                                <td>Imagem</td>
                                                                            }
                                                                            else
                                                                            {
