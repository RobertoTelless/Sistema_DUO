@using Presentation.Extensions
@model SMS_Solution.ViewModels.PedidoVendaViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title">
        @if (ViewBag.StatusVenda == 1)
        {
            <h3 class="title">Oportunidades</h3>
        }
        else if (ViewBag.StatusVenda == 2)
        {
            <h3 class="title">Propostas</h3>
        }
        else if (ViewBag.StatusVenda == 3)
        {
            <h3 class="title">Pedidos de Venda</h3>
        }
        else if (ViewBag.StatusVenda == 4)
        {
            <h3 class="title">Faturamento</h3>
        }
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarAdmin", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                @if (ViewBag.StatusVenda == 1)
                {
                    <a href="@Url.Action("MontarTelaPedidoVenda", "Venda", new { status = 1 })">Oportunidades</a>
                }
                else if (ViewBag.StatusVenda == 2)
                {
                    <a href="@Url.Action("MontarTelaPedidoVenda", "Venda", new { status = 2 })">Propostas</a>
                }
                else if (ViewBag.StatusVenda == 3)
                {
                    <a href="@Url.Action("MontarTelaPedidoVenda", "Venda", new { status = 3 })">Pedidos de Venda</a>
                }
                else if (ViewBag.StatusVenda == 4)
                {
                    <a href="@Url.Action("MontarTelaPedidoVenda", "Venda", new { status = 4 })">Faturamento</a>
                }
            </li>
            <li class="active">
                @if (ViewBag.StatusVenda == 1)
                {
                    <strong>Oportunidades - Inclusão</strong>
                }
                else if (ViewBag.StatusVenda == 2)
                {
                    <strong>Propostas - Inclusão</strong>
                }
                else if (ViewBag.StatusVenda == 3)
                {
                    <strong>Pedidos de Venda - Inclusão</strong>
                }
                else if (ViewBag.StatusVenda == 4)
                {
                    <strong>Faturamento - Inclusão</strong>
                }
            </li>
        </ol>
        <br />
    </div>

    @*TABS - PRINCIPAL*@
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    @if (ViewBag.StatusVenda == 1)
                    {
                        <h5>Oportunidades - Inclusão</h5>
                    }
                    else if (ViewBag.StatusVenda == 2)
                    {
                        <h5>Propostas - Inclusão</h5>
                    }
                    else if (ViewBag.StatusVenda == 3)
                    {
                        <h5>Pedidos de Venda - Inclusão</h5>
                    }
                    else if (ViewBag.StatusVenda == 4)
                    {
                        <h5>Faturamento - Inclusão</h5>
                    }
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Configuração 1</a>
                            </li>
                            <li>
                                <a href="#">Configuração 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div id="containerAlert">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                <button type="button" class="close" data-dismiss="alert">Fechar</button>
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                            </div>
                        }
                        <div class="tabs-container">
                            @using (Html.BeginForm("IncluirPedidoVenda", "Venda", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
                            {
                                <ul class="nav nav-tabs">
                                    <li class="active"><a data-toggle="tab" href="#tab-1">Dados Gerais</a></li>
                                    <li id="tabProd" class=""><a data-toggle="tab" href="#tab-2">Produtos</a></li>
                                    @*<li id="tabServ" class=""><a data-toggle="tab" href="#tab-6">Serviços</a></li>*@
                                    @if (ViewBag.StatusVenda != 1 && ViewBag.StatusVenda != 2)
                                    {
                                        <li class=""><a data-toggle="tab" href="#tab-5">Parcelamento</a></li>
                                    }
                                    <li class=""><a data-toggle="tab" href="#tab-3">Anexos</a></li>
                                    <li class=""><a data-toggle="tab" href="#tab-4">Observações</a></li>
                                </ul>
                                <div class="tab-content">

                                    @*Dados Gerais*@
                                    <div id="tab-1" class="tab-pane active">
                                        <div class="panel-body">
                                            <div class="form-group">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    @Html.HiddenFor(m => m.ASSI_CD_ID)
                                                    @Html.HiddenFor(m => m.PEVE_IN_ATIVO)
                                                    @Html.HiddenFor(m => m.PEVE_IN_STATUS)
                                                    @Html.HiddenFor(m => m.PEVE_NR_NUMERO)
                                                    @Html.HiddenFor(m => m.PEVE_DT_CRIACAO)
                                                    @Html.HiddenFor(m => m.PEVE_DT_CRIACAO_OPORTUNIDADE)
                                                    @Html.HiddenFor(m => m.PEVE_DT_CRIACAO_PROPOSTA)
                                                    @Html.HiddenFor(m => m.PEVE_DT_PREVISTA)
                                                    @Html.HiddenFor(m => m.PEVE_DT_DATA)
                                                    <div class="col-lg-4 col-md-4 col-xs-12">
                                                        Cliente*
                                                        @Html.DropDownListFor(m => m.CLIE_CD_ID, (SelectList)ViewBag.Cliente, "Selecionar", new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.CLIE_CD_ID, "", new { @style = "color:red" })
                                                    </div>
                                                    <div class="col-lg-2 col-md-2 col-xs-12">
                                                        Filial*
                                                        @Html.DropDownListFor(m => m.FILI_CD_ID, (SelectList)ViewBag.Filiais, "Selecionar", new { @class = "form-control", autofocus = true, @id = "fili", onchange = "FilialChange()" })
                                                        @Html.ValidationMessageFor(m => m.FILI_CD_ID, "", new { @style = "color:red" })
                                                    </div>
                                                    <div class="col-lg-3 col-md-3 col-xs-12">
                                                        Usuário*
                                                        @Html.DropDownListFor(m => m.USUA_CD_ID, (SelectList)ViewBag.Usuarios, "Selecionar", new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.USUA_CD_ID, "", new { @style = "color:red" })
                                                    </div>
                                                    @if (ViewBag.StatusVenda == 2)
                                                    {
                                                        <div class="col-lg-2 col-md-2 col-xs-12">
                                                            Frete*
                                                            @Html.TextBoxFor(m => m.PEVE_VL_FRETE, new { @class = "form-control", autofocus = true })
                                                            @Html.ValidationMessageFor(m => m.PEVE_VL_FRETE, "", new { @style = "color:red" })
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                            <div class="form-group" style="margin-left: 0px;">
                                                @if (ViewBag.StatusVenda == 3 || ViewBag.StatusVenda == 4)
                                                {
                                                    <div class="col-lg-3 col-md-3 col-xs-12">
                                                        Centro de Custo*
                                                        @Html.DropDownListFor(m => m.CLIE_CD_ID, (SelectList)ViewBag.CentroCusto, "Selecionar", new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.CLIE_CD_ID, "", new { @style = "color:red" })
                                                    </div>
                                                    <div class="col-lg-3 col-md-3 col-xs-12">
                                                        Forma de Pagamento
                                                        @Html.DropDownListFor(m => m.FOPA_CD_ID, (SelectList)ViewBag.FormaPagamento, "Selecionar", new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.FOPA_CD_ID, "", new { @style = "color:red" })
                                                    </div>
                                                }
                                                @if (ViewBag.StatusVenda == 2 || ViewBag.StatusVenda == 3)
                                                {
                                                    <div class="col-lg-3 col-md-3 col-xs-12">
                                                        Forma de Envio
                                                        @Html.DropDownListFor(m => m.FOEN_CD_ID, (SelectList)ViewBag.FormaEnvio, "Selecionar", new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.FOEN_CD_ID, "", new { @style = "color:red" })
                                                    </div>
                                                    <div class="col-lg-3 col-md-3 col-xs-12">
                                                        Forma de Frete
                                                        @Html.DropDownListFor(m => m.FOFR_CD_ID, (SelectList)ViewBag.FormaFrete, "Selecionar", new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.FOFR_CD_ID, "", new { @style = "color:red" })
                                                    </div>
                                                }
                                            </div>
                                            @if (ViewBag.StatusVenda == 2)
                                            { 
                                                <div class="form-group" style="margin-left: 0px;">
                                                    Transportadora
                                                    @Html.DropDownListFor(m => m.FOFR_CD_ID, (SelectList)ViewBag.FormaFrete, "Selecionar", new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.FOFR_CD_ID, "", new { @style = "color:red" })
                                                </div>
                                            }
                                            <div class="form-group">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    <div class="col-lg-3 col-md-3 col-xs-12">
                                                        Nome*
                                                        @Html.TextBoxFor(m => m.PEVE_NM_NOME, new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.PEVE_NM_NOME, "", new { @style = "color:red" })
                                                    </div>
                                                    <div class="col-lg-2 col-md-2 col-xs-12">
                                                        Número*
                                                        @Html.TextBoxFor(m => m.PEVE_NR_NUMERO, new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.PEVE_NR_NUMERO, "", new { @style = "color:red" })
                                                    </div>
                                                    <div class="col-lg-2 col-md-2 col-xs-12">
                                                        Data de Validade*
                                                        @Html.TextBoxFor(m => m.PEVE_DT_VALIDADE, "{0:dd/MM/yyyy}", new { @class = "form-control date-picker", autofocus = true, @id="d1" })
                                                        @Html.ValidationMessageFor(m => m.PEVE_DT_VALIDADE, "", new { @style = "color:red" })
                                                    </div>
                                                    @if (ViewBag.StatusVenda == 1)
                                                    {
                                                        <div class="col-lg-2 col-md-2 col-xs-12">
                                                            Data Prevista*
                                                            @Html.TextBoxFor(m => m.PEVE_DT_PREVISTA_OPORTUNIDADE, "{0:dd/MM/yyyy}", new { @class = "form-control date-picker", autofocus = true, @id="d2" })
                                                            @Html.ValidationMessageFor(m => m.PEVE_DT_PREVISTA_OPORTUNIDADE, "", new { @style = "color:red" })
                                                        </div>
                                                    }
                                                    else if (ViewBag.StatusVenda == 2)
                                                    {
                                                        <div class="col-lg-3 col-md-3 col-xs-12">
                                                            Data Prevista*
                                                            @Html.TextBoxFor(m => m.PEVE_DT_PREVISTA_PROPOSTA, "{0:dd/MM/yyyy}", new { @class = "form-control date-picker", autofocus = true })
                                                            @Html.ValidationMessageFor(m => m.PEVE_DT_PREVISTA_PROPOSTA, "", new { @style = "color:red" })
                                                        </div>
                                                    }
                                                    else if (ViewBag.StatusVenda == 3)
                                                    {
                                                        <div class="col-lg-3 col-md-3 col-xs-12">
                                                            Data Prevista*
                                                            @Html.TextBoxFor(m => m.PEVE_DT_PREVISTA, "{0:dd/MM/yyyy}", new { @class = "form-control date-picker", autofocus = true })
                                                            @Html.ValidationMessageFor(m => m.PEVE_DT_PREVISTA, "", new { @style = "color:red" })
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="col-lg-3 col-md-3 col-xs-12">
                                                            Data Prevista*
                                                            @Html.TextBoxFor(m => m.PEVE_DT_PREVISTA, "{0:dd/MM/yyyy}", new { @class = "form-control date-picker", autofocus = true, @readonly = "readonly" })
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    Descrição
                                                    @Html.TextAreaFor(m => m.PEVE_DS_DESCRICAO, new { @class = "form-control", style = "width: 100%; height: 100px;", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.PEVE_DS_DESCRICAO, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                            @if (ViewBag.StatusVenda == 1 || ViewBag.StatusVenda == 2)
                                            {
                                                <div class="row">
                                                    <div class="form-group">
                                                        <div class="col-lg-12 col-md-12 col-xs-12">
                                                            Forma de Pagamento (Descrição)
                                                            @Html.TextAreaFor(m => m.PEVE_DS_FORMA_PAGAMENTO, new { @class = "form-control", style = "max-width: 100%; height: 100px;", autofocus = true })
                                                            @Html.ValidationMessageFor(m => m.PEVE_DS_FORMA_PAGAMENTO, "", new { @style = "color:red" })
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>

                                    @*Itens do Pedido - Produto*@
                                    <div id="tab-2" class="tab-pane">
                                        <div class="panel-body">
                                            <div class="form-group">
                                                <div id="prodContainer" class="col-lg-3 col-md-3 col-xs-12">
                                                    @Html.HiddenFor(m => m.PEVE_CD_ID)
                                                    Produto*
                                                    @Html.DropDownList("Produto", (SelectList)ViewBag.Produtos, "Selecionar", new { @class = "form-control", @id = "prod" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Quantidade*
                                                    <input type="number" step="0.01" class="form-control" id="qtde" />
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Quantidade em Estoque*
                                                    <input type="number" class="form-control" id="qtdeEstoque" readonly="readonly" />
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    <span class="btn btn-success btn-sm" onclick="IncluirItemPedidoTabela()">Incluir Produto</span>
                                                </div>
                                            </div>
                                            <div class="form-group" style="margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    <table id="itemPedido" style="width: 100%" class="table table-striped table-bordered table-hover dataTables-example">
                                                        <thead>
                                                            <tr>
                                                                <td>Produto</td>
                                                                <td>Unidade</td>
                                                                <td>Quantidade</td>
                                                                <td>Preço (R$)</td>
                                                                <td>Quantidade em Estoque</td>
                                                                <td>Preço Total (R$)</td>
                                                                <td>Ações</td>
                                                            </tr>
                                                        </thead>

                                                        <tbody>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    @*Itens do Pedido - Serviço*@
                                    @*<div id="tab-6" class="tab-pane">
                                        <div class="panel-body">
                                            <div class="form-group">
                                                <div id="servContainer" class="col-lg-3 col-md-3 col-xs-12">
                                                    @Html.HiddenFor(m => m.PEVE_CD_ID)
                                                    Serviço*
                                                    @Html.DropDownList("Servico", (SelectList)ViewBag.Servicos, "Selecionar", new { @class = "form-control", @id = "serv" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Quantidade*
                                                    <input type="number" step="0.01" class="form-control" id="qtdeServ" />
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    <span class="btn btn-success btn-sm" onclick="IncluirItemPedidoTabelaServ()">Incluir Serviço</span>
                                                </div>
                                            </div>
                                            <div class="form-group" style="margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    <table id="itemPedidoServ" style="width: 100%" class="table table-striped table-bordered table-hover dataTables-example">
                                                        <thead>
                                                            <tr>
                                                                <td>Serviço</td>
                                                                <td>Tipo</td>
                                                                <td>Quantidade</td>
                                                                <td>Preço (R$)</td>
                                                                <td>Ações</td>
                                                            </tr>
                                                        </thead>

                                                        <tbody>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>*@

                                    @*Imagens - Foto e Anexos*@
                                    <div id="tab-3" class="tab-pane">
                                        <div class="panel-body">
                                            <div class="row">
                                                <hr />
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    <h4>Anexos</h4><input class="btn btn-sm btn-warning" id="inputFile" type="file" multiple />
                                                    <br />
                                                    <div class="form-group">
                                                        <div class="ibox-content">
                                                            <br />
                                                            <table style="width: 100%;" class="table table-striped table-bordered table-hover dataTables-example" id="myFiles">
                                                                <thead style="background-color:lightsteelblue">
                                                                    <tr>
                                                                        <td>Nome</td>
                                                                        <td>Tipo</td>
                                                                        <td>Ações</td>
                                                                    </tr>
                                                                </thead>
                                                                <tbody></tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    @*Observações*@
                                    <div id="tab-4" class="tab-pane">
                                        <div class="panel-body">
                                            <div class="form-group">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    Observações
                                                    @Html.TextAreaFor(m => m.PEVE_TX_OBSERVACOES, new { @class = "form-control", style = "width: 100%; height: 400px;", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.PEVE_TX_OBSERVACOES, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    @*Parcelamento*@
                                    <div id="tab-5" class="tab-pane">
                                        <div class="panel-body">
                                            <div class="row">
                                                <div class="form-group">
                                                    <div class="col-lg-2 col-md-2 col-xs-2">
                                                        <div class="input-group">
                                                            Parcelada
                                                            <span class="input-group-btn">
                                                                @Html.CheckBoxFor(m => m.Parcela, new { @class = "checkbox i-checks", @readonly = "readonly" })
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-lg-4 col-md-4 col-xs-4">
                                                        Número de Parcelas
                                                        @Html.TextBoxFor(m => m.PEVE_IN_NUMERO_PARCELAS, new { @class = "form-control touchspin2", autofocus = true, @id = "parcelas" })
                                                        @Html.ValidationMessageFor(m => m.PEVE_IN_NUMERO_PARCELAS, "", new { @style = "color:red" })
                                                    </div>
                                                    <div class="col-lg-4 col-md-4 col-xs-4">
                                                        Data de Início
                                                        @Html.TextBoxFor(m => m.PEVE_DT_INICIO_PARCELAS, "{0:dd/MM/yyyy}", new { @class = "form-control date-picker", autofocus = true, @id = "data2" })
                                                        @Html.ValidationMessageFor(m => m.PEVE_DT_INICIO_PARCELAS, "", new { @style = "color:red" })
                                                    </div>
                                                    <div class="col-lg-4 col-md-4 col-xs-4">
                                                        Periodicidade
                                                        @Html.DropDownListFor(m => m.PERI_CD_ID, (SelectList)ViewBag.Periodicidade, "Selecionar", new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.PERI_CD_ID, "", new { @style = "color:red" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <br />
                                        @Html.ButtonActionSubmit(text: "BtnSubmit", htmlAttributes: new { id = "submit", style = "display: none;" })
                                        @if (ViewBag.StatusVenda == 1)
                                        {
                                            <button class="btnSubmit btn btn-sm btn-success" id="basictoast" type="button">Confirma inclusão do Oportunidade</button>
                                        }
                                        else if (ViewBag.StatusVenda == 2)
                                        {
                                            <button class="btnSubmit btn btn-sm btn-success" id="basictoast" type="button">Confirma inclusão do Proposta</button>
                                        }
                                        else
                                        {
                                            <button class="btnSubmit btn btn-sm btn-success" id="basictoast" type="button">Confirma inclusão do Pedido</button>
                                        }
                                        @Html.ButtonLinkIndex(text: "Cancelar", action: "VoltarBaseMontarTelaPedidoVenda", controller: "Venda")
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Chrome, Safari, Edge, Opera */
        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        /* Firefox */
        input[type=number] {
            -moz-appearance: textfield;
        }
    </style>

    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/jasnyBootstrapStyles")
    @Styles.Render("~/Content/plugins/iCheck/iCheckStyles")
    @Styles.Render("~/plugins/touchSpinStyles")
    @Styles.Render("~/plugins/toastrStyles")
}
@section Scripts {

    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    @Scripts.Render("~/plugins/toastr")
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/bundles/inputmask")
    @Scripts.Render("~/plugins/jasnyBootstrap")
    @Scripts.Render("~/plugins/sparkline")
    @Scripts.Render("~/plugins/switchery")
    @Scripts.Render("~/plugins/touchSpin")
    @Scripts.Render("~/plugins/iCheck")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.js"></script>
    <script src="~/Scripts/uploadAnexo.js"></script>

