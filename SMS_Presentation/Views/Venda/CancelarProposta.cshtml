@using Presentation.Extensions
@model SMS_Solution.ViewModels.PedidoVendaViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title"> 
        <h3 class="title">Propostas</h3> 
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarAdmin", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaPedidoVenda", "Venda", new { status = 2 })">Proposta</a>
            </li>
            <li class="active">
                <strong>Proposta - Cancelamento</strong>
            </li>
        </ol>
        <br />
    </div>

    @*INDICADORES*@
    <div class="row">
        <div class="col-lg-2">
            <div class="widget style1 lazur-bg">
                <div class="row vertical-align">
                    <div class="col-xs-3">
                        <i class="fa fa-thumbs-o-up fa-3x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <h3 class="font-normal">@Model.PEVE_DT_DATA</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="widget style1 lazur-bg">
                <div class="row vertical-align">
                    <div class="col-xs-3">
                        <i class="fa fa-thumbs-o-up fa-3x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        @if (Model.PEVE_IN_STATUS == 1)
                        {
                            <h3 class="font-normal">Oportunidade Criada</h3>
                        }
                        else if (Model.PEVE_IN_STATUS == 2)
                        {
                            <h3 class="font-normal">Oportunidade Cancelada</h3>
                        }
                        else if (Model.PEVE_IN_STATUS == 3)
                        {
                            <h3 class="font-normal">Proposta Criada</h3>
                        }
                        else if (Model.PEVE_IN_STATUS == 4)
                        {
                            <h3 class="font-normal">Proposta Cancelada</h3>
                        }
                        else if (Model.PEVE_IN_STATUS == 5)
                        {
                            <h3 class="font-normal">Pedido Criado</h3>
                        }
                        else if (Model.PEVE_IN_STATUS == 6)
                        {
                            <h3 class="font-normal">Pedido Cancelado</h3>
                        }
                        else if (Model.PEVE_IN_STATUS == 7)
                        {
                            <h3 class="font-normal">Pedido em Aprovação</h3>
                        }
                        else if (Model.PEVE_IN_STATUS == 8)
                        {
                            <h3 class="font-normal">Pedido Não Aprovado</h3>
                        }
                        else if (Model.PEVE_IN_STATUS == 9)
                        {
                            <h3 class="font-normal">Pedido Aprovado</h3>
                        }
                        else if (Model.PEVE_IN_STATUS == 10)
                        {
                            <h3 class="font-normal">Pedido Processado</h3>
                        }
                        else if (Model.PEVE_IN_STATUS == 11)
                        {
                            <h3 class="font-normal">Faturamento</h3>
                        }
                        else if (Model.PEVE_IN_STATUS == 12)
                        {
                            <h3 class="font-normal">Expedição</h3>
                        }
                        else if (Model.PEVE_IN_STATUS == 13)
                        {
                            <h3 class="font-normal">Encerrado</h3>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

