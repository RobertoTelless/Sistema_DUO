@using Presentation.Extensions
@model SMS_Solution.ViewModels.TransportadoraViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title">
        <h3 class="title">Transportadoras</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaTransportadora", "Transportadora")">Transportadoras</a>
            </li>
            <li class="active">
                <strong>Transportadoras - Inclusão</strong>
            </li>
        </ol>
        <br />
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Transportadora - Inclusão</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Configuração 1</a>
                            </li>
                            <li>
                                <a href="#">Configuração 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert">Fechar</button>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }
                    <div class="tabs-container">
                        @using (Html.BeginForm("IncluirTransportadora", "Transportadora", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
                        {
                            <div class="form-group">
                                <button class="btnSubmit btn btn-sm btn-success" id="basictoast" type="button">Confirma inclusão de Transportandora</button>
                                @Html.ButtonLinkIndex(text: "Cancelar", action: "VoltarBaseTransportadora", controller: "Transportadora")
                            </div>
                            <ul class="nav nav-tabs">
                                <li class="active"><a data-toggle="tab" href="#tab-1">Dados Gerais</a></li>
                                <li class=""><a data-toggle="tab" href="#tab-2">Anexos</a></li>
                                <li class=""><a data-toggle="tab" href="#tab-end">Endereços</a></li>
                                <li class=""><a data-toggle="tab" href="#tab-3">Contatos</a></li>
                                <li class=""><a data-toggle="tab" href="#tab-4">Observações</a></li>
                            </ul>

                            <div class="tab-content">
                                @*Dados Gerais*@
                                <div id="tab-1" class="tab-pane active">
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    @Html.HiddenFor(m => m.ASSI_CD_ID)
                                                    @Html.HiddenFor(m => m.TRAN_DT_CADASTRO)
                                                    @Html.HiddenFor(m => m.TRAN_IN_ATIVO)
                                                    Filial Vinculada*
                                                    @Html.DropDownListFor(m => m.FILI_CD_ID, (SelectList)ViewBag.Filiais, "Selecionar", new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.FILI_CD_ID, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Tipo de Veículo
                                                    @Html.DropDownListFor(m => m.TIVE_CD_ID, (SelectList)ViewBag.TipoVeiculos, "Selecionar", new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.TIVE_CD_ID, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Tipo de Transporte
                                                    @Html.DropDownListFor(m => m.TITR_CD_ID, (SelectList)ViewBag.TipoTransportes, "Selecionar", new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.TITR_CD_ID, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    CNPJ
                                                    <div class="input-group">
                                                        @Html.TextBoxFor(m => m.TRAN_NR_CNPJ, new { @class = "form-control", @id = "cnpj", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.TRAN_NR_CNPJ, "", new { @style = "color:red" })
                                                        <span class="input-group-btn">
                                                            <span class="btn btn-success" onclick="PesquisaCNPJ($('#cnpj').val())">Buscar CNPJ</span>
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="col-lg-4 col-md-4 col-xs-12">
                                                    Nome*
                                                    @Html.TextBoxFor(m => m.TRAN_NM_NOME, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.TRAN_NM_NOME, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-5 col-md-5 col-xs-12">
                                                    Razão Social
                                                    @Html.TextBoxFor(m => m.TRAN_NM_RAZAO, new { @class = "form-control", autofocus = true, id = "razao" })
                                                    @Html.ValidationMessageFor(m => m.TRAN_NM_RAZAO, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Inscrição Estadual
                                                    @Html.TextBoxFor(m => m.TRAN_NR_INSCRICAO_ESTADUAL, new { @class = "form-control", autofocus = true, id = "ie" })
                                                    @Html.ValidationMessageFor(m => m.TRAN_NR_INSCRICAO_ESTADUAL, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Inscrição Municipal
                                                    @Html.TextBoxFor(m => m.TRAN_NR_INSCRICAO_MUNICIPAL, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.TRAN_NR_INSCRICAO_MUNICIPAL, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-4 col-md-4 col-xs-12">
                                                    E-Mail*
                                                    @Html.TextBoxFor(m => m.TRAN_NM_EMAIL, new { @class = "form-control", autofocus = true, id = "email" })
                                                    @Html.ValidationMessageFor(m => m.TRAN_NM_EMAIL, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-6 col-md-6 col-xs-12">
                                                    Informações Gerais
                                                    @Html.TextAreaFor(m => m.TRAN_DS_INFORMACOES_GERAIS, new { @class = "form-control", style = "width: 100%; height: 100px;", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.TRAN_DS_INFORMACOES_GERAIS, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-6 col-md-6 col-xs-12">
                                                    Área de Cobertura
                                                    @Html.TextAreaFor(m => m.TRAN_DS_AREA_COBERTURA, new { @class = "form-control", style = "width: 100%; height: 100px;", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.TRAN_DS_AREA_COBERTURA, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-6 col-md-6 col-xs-12">
                                                    Transportes Especiais
                                                    @Html.TextAreaFor(m => m.TRAN_DS_TRANSPORTE_ESPECIAL, new { @class = "form-control", style = "width: 100%; height: 100px;", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.TRAN_DS_TRANSPORTE_ESPECIAL, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-6 col-md-6 col-xs-12">
                                                    Seguros
                                                    @Html.TextAreaFor(m => m.TRAN_DS_SEGURO, new { @class = "form-control", style = "width: 100%; height: 100px;", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.TRAN_DS_SEGURO, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                @*Endereços*@
                                <div id="tab-end" class="tab-pane">
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="form-group">
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    <h4>Endereço</h4>
                                                    <br />
                                                    CEP
                                                    <div class="input-group">
                                                        @Html.TextBoxFor(m => m.TRAN_NR_CEP, new { @class = "form-control", @id = "cep", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.TRAN_NR_CEP, "", new { @style = "color:red" })
                                                        <span class="input-group-btn">
                                                            <span class="btn btn-warning btn-sm" id="btnBuscaCep" onclick="PesquisaCep($('#cep').val(), $(this), 1)">Buscar CEP</span>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Endereço
                                                    @Html.TextBoxFor(m => m.TRAN_NM_ENDERECO, new { @class = "form-control", @id = "endereco", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.TRAN_NM_ENDERECO, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Bairro
                                                    @Html.TextBoxFor(m => m.TRAN_NM_BAIRRO, new { @class = "form-control", @id = "bairro", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.TRAN_NM_BAIRRO, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Cidade
                                                    @Html.TextBoxFor(m => m.TRAN_NM_CIDADE, new { @class = "form-control", @id = "cidade", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.TRAN_NM_CIDADE, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    UF
                                                    @Html.TextBoxFor(m => m.TRAN_SG_UF, new { @class = "form-control", @id = "uf", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.TRAN_SG_UF, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                @*Imagens - Foto e Anexos*@
                                <div id="tab-2" class="tab-pane">
                                    <div class="panel-body">
                                        <div class="row">
                                            <div style="margin-left: 15px;" class="col-lg-12 col-md-12 col-xs-12">
                                                <div class="form-group">
                                                    <h4>Logotipo/Foto</h4><input type="file" accept=".jpg, .png, .jpeg, .gif|images/*" name="file" id="imgTran" class="btn btn-sm btn-warning" multiple />
                                                    <br />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <hr />
                                            <div class="col-lg-12 col-md-12 col-xs-12">
                                                <h4>Anexos</h4><input class="btn btn-sm btn-warning" id="inputFile" type="file" multiple />
                                                <br />
                                                <div class="form-group">
                                                    <div class="ibox-content">
                                                        <br />
                                                        <table style="width: 100%;" class="table table-striped table-bordered table-hover dataTables-example" id="myFiles">
                                                            <thead style="background-color:lightsteelblue">
                                                                <tr>
                                                                    <td>Nome</td>
                                                                    <td>Tipo</td>
                                                                    <td>Ações</td>
                                                                </tr>
                                                            </thead>
                                                            <tbody></tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                @*Contatos*@
                                <div id="tab-3" class="tab-pane">
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Telefone*
                                                    @Html.TextBoxFor(m => m.TRAN_NR_TELEFONES, new { @class = "form-control", autofocus = true, id = "tel" })
                                                    @Html.ValidationMessageFor(m => m.TRAN_NR_TELEFONES, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-6 col-md-6 col-xs-12">
                                                    Contatos
                                                    @Html.TextBoxFor(m => m.TRAN_NM_CONTATOS, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.TRAN_NM_CONTATOS, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-4 col-md-4 col-xs-12">
                                                    Website
                                                    @Html.TextBoxFor(m => m.TRAN_NM_WEBSITE, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.TRAN_NM_WEBSITE, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                @*Observações*@
                                <div id="tab-4" class="tab-pane">
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    Observações
                                                    @Html.TextAreaFor(m => m.TRAN_TX_OBSERVACOES, new { @class = "form-control", style = "width: 100%; height: 400px;", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.TRAN_TX_OBSERVACOES, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <br />
                                    @Html.ButtonActionSubmit(text: "BtnSubmit", htmlAttributes: new { id = "submit", style = "display: none;" })
                                    <button class="btnSubmit btn btn-sm btn-success" id="basictoast" type="button">Confirma inclusão de Transportandora</button>
                                    @Html.ButtonLinkIndex(text: "Cancelar", action: "VoltarBaseTransportadora", controller: "Transportadora")
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/jasnyBootstrapStyles")
    @Styles.Render("~/plugins/toastrStyles")
}
@section Scripts {
    @Scripts.Render("~/plugins/toastr")
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/bundles/inputmask")
    @Scripts.Render("~/plugins/jasnyBootstrap")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.js"></script>
    <script src="~/Scripts/uploadAnexo.js"></script>

    <script type="text/javascript">
        $(function () {
            $("#cpf").mask("999.999.999-99");
            $("#cnpj").mask("99.999.999/9999-99");
            $("#cep").mask("99999-999");
            $('#tel').mask('(99)9999-9999');
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {

            var i = -1;
            var toastCount = 0;
            var $toastlast;
            var getMessage = function () {
                var msg = 'Hi, welcome to Inspinia. This is example of Toastr notification box.';
                return msg;
            };

            $('#basictoast').click(function () {
                // Display a success toast, with a title
                toastr.success('Inclusão em andamento!')
            });
            $('#showtoast').click(function () {
                var shortCutFunction = $("#toastTypeGroup input:radio:checked").val();
                var msg = $('#message').val();
                var title = $('#title').val() || '';
                var $showDuration = $('#showDuration');
                var $hideDuration = $('#hideDuration');
                var $timeOut = $('#timeOut');
                var $extendedTimeOut = $('#extendedTimeOut');
                var $showEasing = $('#showEasing');
                var $hideEasing = $('#hideEasing');
                var $showMethod = $('#showMethod');
                var $hideMethod = $('#hideMethod');
                var toastIndex = toastCount++;
                toastr.options = {
                    closeButton: $('#closeButton').prop('checked'),
                    debug: $('#debugInfo').prop('checked'),
                    progressBar: $('#progressBar').prop('checked'),
                    positionClass: $('#positionGroup input:radio:checked').val() || 'toast-top-right',
                    onclick: null
                };
                if ($('#addBehaviorOnToastClick').prop('checked')) {
                    toastr.options.onclick = function () {
                        alert('You can perform some custom action after a toast goes away');
                    };
                }
                if ($showDuration.val().length) {
                    toastr.options.showDuration = $showDuration.val();
                }
                if ($hideDuration.val().length) {
                    toastr.options.hideDuration = $hideDuration.val();
                }
                if ($timeOut.val().length) {
                    toastr.options.timeOut = $timeOut.val();
                }
                if ($extendedTimeOut.val().length) {
                    toastr.options.extendedTimeOut = $extendedTimeOut.val();
                }
                if ($showEasing.val().length) {
                    toastr.options.showEasing = $showEasing.val();
                }
                if ($hideEasing.val().length) {
                    toastr.options.hideEasing = $hideEasing.val();
                }
                if ($showMethod.val().length) {
                    toastr.options.showMethod = $showMethod.val();
                }
                if ($hideMethod.val().length) {
                    toastr.options.hideMethod = $hideMethod.val();
                }
                if (!msg) {
                    msg = getMessage();
                }
                $("#toastrOptions").text("Command: toastr["
                    + shortCutFunction
                    + "](\""
                    + msg
                    + (title ? "\", \"" + title : '')
                    + "\")\n\ntoastr.options = "
                    + JSON.stringify(toastr.options, null, 2)
                );
                var $toast = toastr[shortCutFunction](msg, title); // Wire up an event handler to a button in the toast, if it exists
                $toastlast = $toast;
                if ($toast.find('#okBtn').length) {
                    $toast.delegate('#okBtn', 'click', function () {
                        alert('you clicked me. i was toast #' + toastIndex + '. goodbye!');
                        $toast.remove();
                    });
                }
                if ($toast.find('#surpriseBtn').length) {
                    $toast.delegate('#surpriseBtn', 'click', function () {
                        alert('Surprise! you clicked me. i was toast #' + toastIndex + '. You could perform an action here.');
                    });
                }
            });
            function getLastToast() {
                return $toastlast;
            }
            $('#clearlasttoast').click(function () {
                toastr.clear(getLastToast());
            });
            $('#cleartoasts').click(function () {
                toastr.clear();
            });

        });
    </script>

    <script>
        SendFilesV2('imgTran', 'Transportadora', 'UploadFileToSession');
    </script>

    <script>
        function PesquisaCNPJ(cnpj) {
            var data = {
                cnpj: cnpj
            }

            if (cnpj != "") {
                $.ajax({
                    url: '../Transportadora/PesquisaCNPJ'
                    , type: 'POST'
                    , data: data
                    , success: function (r) {
                        if (r.status != "ERROR") {
                            $('#ie').val(r.INSCRICAO_ESTADUAL);
                            $('#razao').val(r.RAZAO);
                            $('#nome').val(r.NOME);
                            $('#cep').val(r.CEP);
                            $("#cep").mask("99999-999");
                            $('#endereco').val(r.ENDERECO);
                            $('#bairro').val(r.BAIRRO);
                            $('#cidade').val(r.CIDADE);
                            $('#uf option[value="' + r.UF + '"]').attr('selected', 'selected');
                            $('#email').val(r.EMAIL);
                            $('#tel').val(r.TELEFONE);

                            $('#btnPesquisaCnpj').html('Buscar CNPJ');
                            $('#btnPesquisaCnpj').attr('disabled', false);
                        } else {
                            if (r.public == 1) {
                                var alert = '<div class="alert alert-danger">'
                                    + '<button type="button" class="close" data-dismiss="alert">Fechar</button>'
                                    + r.message
                                    + '</div>';
                                $('.ibox-content').prepend(alert);
                                $('.alert').show();
                            } else {
                                console.log(r);
                            }
                        }
                    }
                });
            }
        }
    </script>

    <script>
        function PesquisaCep(cep, btn, tipoEnd) {
            data = {
                cep: cep
                , tipoEnd: tipoEnd
            }

            $('#btnBuscaCep').attr("disabled", "disabled");

            $.ajax({
                url: '../Transportadora/PesquisaCEP_Javascript'
                , type: 'POST'
                , data: data
                , success: function (r) {
                    $('#endereco').val(r.TRAN_NM_ENDERECO);
                    $('#bairro').val(r.TRAN_NM_BAIRRO);
                    $('#cidade').val(r.TRAN_NM_CIDADE);
                    $('#uf').val(r.TRAN_SG_UF);
                    $('#btnBuscaCep').removeAttr("disabled");
                }
            });
        }
    </script>

    <script>
        SendFilesV2('imgTransportadora', 'Transportadora', 'UploadFileToSession');
    </script>

    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                  alert("@ViewBag.Message");
            };
        </script>
    }
}
