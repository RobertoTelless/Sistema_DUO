@using Presentation.Extensions
@model SMS_Solution.ViewModels.EquipamentoViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="modalContainer">
        <div id="modal" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        @*titulo gerado dinamicamente*@
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @*Gerado dinamicamente*@
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="page-title"> 
        <h3 class="title">Equipamentos & Patrimônio</h3> 
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaEquipamento", "Equipamento")">Equipamentos & Patrimônio</a>
            </li>
            <li class="active">
                <strong>Equipamentos & Patrimônio - Edição</strong>
            </li>
        </ol>
        <br />
    </div>
    <div class="row">
        @if (Model.EQUI_DT_BAIXA == null)
        {
            <div class="col-lg-3">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <span class="label label-primary pull-right">Hoje</span>
                        <h5>Pat #@Model.EQUI_NR_NUMERO</h5>
                    </div>
                    <div class="ibox-content">
                        <h1 class="no-margins">@ViewBag.DiasManutencao</h1>
                        <div class="stat-percent font-bold text-navy">32% <i class="fa fa-level-up"></i></div>
                        <small>Dias para Manutenção</small>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <span class="label label-primary pull-right">Hoje</span>
                        <h5>Pat #@Model.EQUI_NR_NUMERO</h5>
                    </div>
                    <div class="ibox-content">
                        <h1 class="no-margins">@ViewBag.StatusManutencao</h1>
                        <div class="stat-percent font-bold text-navy">---<i class="fa fa-level-up"></i></div>
                        <small>Status de Manutenção</small>
                    </div>
                </div>
            </div>      
            <div class="col-lg-3">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <span class="label label-primary pull-right">Hoje</span>
                        <h5>Pat #@Model.EQUI_NR_NUMERO</h5>
                    </div>
                    <div class="ibox-content">
                        <h1 class="no-margins">@ViewBag.Dias</h1>
                        <div class="stat-percent font-bold text-navy">32% <i class="fa fa-level-up"></i></div>
                        <small>Dias para Depreciação</small>
                    </div>
                </div>
            </div>
        }
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <span class="label label-primary pull-right">Hoje</span>
                    <h5>Pat #@Model.EQUI_NR_NUMERO</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">@ViewBag.Status</h1>
                    <div class="stat-percent font-bold text-navy">---<i class="fa fa-level-up"></i></div>
                    <small>Status de Depreciação</small>
                </div>
            </div>
        </div>       
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Equipamentos & Patrimônio - Edição</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Configuração 1</a>
                            </li>
                            <li>
                                <a href="#">Configuração 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>

                <div class="ibox-content">
                    <div class="form-group">
                        @Html.ButtonLinkIndex(text: "Gerar Relatório", action: "GerarRelatorioDetalhe", controller: "Equipamento")
                        @Html.ButtonLinkIndex(text: "Voltar", action: "VoltarBaseEquipamento", controller: "Equipamento")
                    </div>
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert">Fechar</button>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }
                    <div class="tabs-container">
                        <ul class="nav nav-tabs">
                            <li class="active"><a data-toggle="tab" href="#tab-1">Dados Gerais</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-2">Imagens</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-3">Manutenções</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-4">Observações</a></li>
                        </ul>
                        <div class="tab-content">

                            @*Dados Gerais*@
                            <div id="tab-1" class="tab-pane active">
                                <div class="panel-body">
                                    @using (Html.BeginForm("EditarEquipamento", "Equipamento", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id="pwd-container1" }))
                                    {
                                        if (Model.EQUI_DT_BAIXA == null)
                                        {
                                            <div class="form-group">
                                                @Html.ButtonActionSubmit(text: "Confirma Edição", htmlAttributes: new { id = "basictoast" })
                                            </div>
                                        }
                                        <div class="row">
                                            <div class="col-lg-1 col-md-1 col-xs-12">
                                                <div style="text-align: center; margin-top: 20px; line-height: 10px;">
                                                    @Html.HiddenFor(m => m.EQUI_CD_ID)
                                                    @Html.HiddenFor(m => m.ASSI_CD_ID)
                                                    @Html.HiddenFor(m => m.EQUI_DT_CADASTRO)
                                                    @Html.HiddenFor(m => m.EQUI_IN_ATIVO)
                                                    @Html.HiddenFor(m => m.EQUI_AQ_FOTO)
                                                    @Html.HiddenFor(m => m.CAEQ_CD_ID)
                                                    @if (!String.IsNullOrEmpty(Model.EQUI_AQ_FOTO))
	                                                {
                                                        <img src="@Url.Content(Model.EQUI_AQ_FOTO)" style = "width: auto; height: auto; max-height: 110px; max-width: 90px;" data-toggle="modal" data-target="#fotoModal" onclick="CriaModal('@Model.EQUI_NM_NOME', '@Url.Content(Model.EQUI_AQ_FOTO)')">
                                                    }
                                                    else
                                                    {
                                                        <img src="~/Imagens/Base/icone_imagem.jpg" style = "width: auto; height: auto; max-height: 110px; max-width: 90px;" data-toggle="modal" data-target="#fotoModal" onclick="CriaModal('@Model.EQUI_NM_NOME', '/Images/gallery/10s.jpg')">
                                                    }
                                                    <br />
                                                    <br />
                                                    <br />
                                                    <br />
                                                    <br />
                                                </div>
                                            </div>
                                            <div class="col-md-11">
                                                <div class="row">
                                                    <div class="col-lg-3 col-md-3 col-xs-12">
                                                        Categoria*
                                                        @Html.TextBoxFor(m => m.CATEGORIA_EQUIPAMENTO.CAEQ_NM_NOME, new { @class = "form-control", autofocus = true, @readonly = "readonly" })
                                                    </div>
                                                    <div class="col-lg-9 col-md-9 col-xs-12">
                                                        Nome*
                                                        @Html.TextBoxFor(m => m.EQUI_NM_NOME, new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.EQUI_NM_NOME, "", new { @style = "color:red" })
                                                    </div>
                                                </div>
                                                <br />
                                                <div class="row">
                                                    <div class="col-lg-2 col-md-2 col-xs-12">
                                                        Número*
                                                        @Html.TextBoxFor(m => m.EQUI_NR_NUMERO, new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.EQUI_NR_NUMERO, "", new { @style = "color:red" })
                                                    </div>
                                                    <div class="col-lg-2 col-md-2 col-xs-12">
                                                        Data de Compra
                                                        @Html.TextBoxFor(m => m.EQUI_DT_COMPRA, "{0:dd/MM/yyyy}", new { @class = "form-control date-picker", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.EQUI_DT_COMPRA, "", new { @style = "color:red" })
                                                    </div>
                                                    <div class="col-lg-2 col-md-2 col-xs-12">
                                                        Valor
                                                        @Html.TextBoxFor(m => m.EQUI_VL_VALOR, null, new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.EQUI_VL_VALOR, "", new { @style = "color:red" })
                                                    </div>
                                                    <div class="col-lg-2 col-md-2 col-xs-12">
                                                        Vida Útil (Meses)
                                                        @Html.TextBoxFor(m => m.EQUI_NR_VIDA_UTIL, new { @class = "form-control touchspin1", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.EQUI_NR_VIDA_UTIL, "", new { @style = "color:red" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    Descrição
                                                    @Html.TextAreaFor(m => m.EQUI_DS_DESCRICAO, new { @class = "form-control", style = "max-width: 100%; height: 100px;", autofocus = true})
                                                    @Html.ValidationMessageFor(m => m.EQUI_DS_DESCRICAO, "",new { @style="color:red" })
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">               
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Data de Baixa
                                                    @Html.TextBoxFor(m => m.EQUI_DT_BAIXA, "{0:dd/MM/yyyy}", new { @class = "form-control date-picker", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.EQUI_DT_BAIXA, "",new { @style="color:red" })
                                                </div>
                                                <div class="col-lg-10 col-md-10 col-xs-12">
                                                    Motivo da Baixa
                                                    @Html.TextAreaFor(m => m.EQUI_DS_MOTIVO_BAIXA, new { @class = "form-control", style = "max-width: 100%; height: 100px;", autofocus = true})
                                                    @Html.ValidationMessageFor(m => m.EQUI_DS_MOTIVO_BAIXA, "",new { @style="color:red" })
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">               
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Avisa Manutenção?
                                                    <br />
                                                    @Html.CheckBoxFor(m => m.AvisaManutencao, new { @class = "checkbox i-checks"})
                                                    @Html.ValidationMessageFor(m => m.AvisaManutencao, "",new { @style="color:red" })
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Periodicidade
                                                    @Html.DropDownListFor(m => m.PERI_CD_ID, (SelectList)ViewBag.Periodicidades, "Selecionar", new { @class = "form-control", autofocus = true })                            
                                                    @Html.ValidationMessageFor(m => m.PERI_CD_ID, "",new { @style="color:red" })
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Data Última Manutenção
                                                    @Html.TextBoxFor(m => m.EQUI_DT_MANUTENCAO, "{0:dd/MM/yyyy}", new { @class = "form-control" , autofocus = true, @readonly="readonly",  @style="color:green" })
                                                </div>
                                            </div>
                                        </div>
                                        if (Model.EQUI_DT_BAIXA == null)
                                        {
                                            <div class="form-group">
                                            @Html.ButtonActionSubmit(text: "Confirma edição", htmlAttributes: new { id = "basictoast" })
                                        </div>
                                        }
                                    }
                                </div>
                            </div>

                            @*Imagens - Foto e Anexos*@
                            <div id="tab-2" class="tab-pane">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-lg-10 col-md-10 col-xs-12">   
                                            <div class="form-group">
                                                <h4>Fotografia do Equipamento</h4>
                                                @using (Html.BeginForm("UploadFotoEquipamento", "Equipamento", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data", @id="pwd-container3" }))
                                                {
                                                    if (Model.EQUI_DT_BAIXA == null)
                                                    {
                                                        <div class="col-lg-12 col-md-12 col-xs-12">
                                                            <input style="float: left; margin-right: 5px;" type="file" name="file" accept=".jpg, .png, .jpeg, .gif|images/*" id="file" class="btn btn-sm btn-warning" />
                                                            <input style="float: left;" type="submit" value="Incluir Fotografia" class="btn btn-sm btn-success" />
                                                        </div>
                                                    }
                                                }
                                            </div>
                                        </div>
                                        <div class="col-lg-2 col-md-2 col-xs-12">
                                            <div class="form-group">
                                                <div class="col-lg-12 col-md-12 col-sm-12">
                                                    <br />
                                                    @if (!String.IsNullOrEmpty(Model.EQUI_AQ_FOTO))
	                                                {
                                                        <img src="@Url.Content(Model.EQUI_AQ_FOTO)" style = "width: auto; height: auto; max-height: 110px; max-width: 90px;" data-toggle="modal" data-target="#fotoModal" onclick="CriaModal('@Model.EQUI_NM_NOME', '@Url.Content(Model.EQUI_AQ_FOTO)')">
                                                    }
                                                    else
                                                    {
                                                        <img src="~/Imagens/Base/icone_imagem.jpg" style = "width: auto; height: auto; max-height: 110px; max-width: 90px;" data-toggle="modal" data-target="#fotoModal" onclick="CriaModal('@Model.EQUI_NM_NOME', '/Images/gallery/10s.jpg')">
                                                    }
                                                </div>                       
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <hr />
                                        <div class="col-lg-12 col-md-12 col-xs-12"> 
                                            <h4>Anexos</h4>
                                            <br />
                                            <div class="form-group">
                                                @using (Html.BeginForm("UploadFileEquipamento", "Equipamento", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data", @id="pwd-container2" }))
                                                {
                                                    <div class="ibox-content">
                                                        @if (Model.EQUIPAMENTO_ANEXO != null && Model.EQUIPAMENTO_ANEXO.Count > 0)
                                                        {
                                                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                                                <thead style ="background-color:lightsteelblue">
                                                                    <tr>
                                                                        <th>Título</th>
                                                                        <th>Data</th>
                                                                        <th>Tipo</th>
                                                                        <th class="td-one-action">Ações</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @foreach (var cond in (Model.EQUIPAMENTO_ANEXO))
                                                                    {
                                                                        <tr>
                                                                            <td>@cond.EQAN_NM_TITULO</td>
                                                                            <td>@cond.EQAN_DT_ANEXO.ToShortDateString()</td>
                                                                            @if (cond.EQAN_IN_TIPO == 1)
	                                                                        {
                                                                                <td>Imagem</td>
                                                                            }
                                                                            else
                                                                            {
                                                                                <td>Arquivo</td>
                                                                            }
                                                                            <td class="td-one-action">
                                                                                @if (cond.EQAN_IN_TIPO == 1 || cond.EQAN_IN_TIPO     == 2)
                                                                                {
                                                                                    @Html.TableLinkDetails(cond.EQAN_CD_ID, "VerAnexoEquipamento", "fa-camera", "Visualizar")
                                                                                }
                                                                                @if (cond.EQAN_IN_TIPO   == 3)
                                                                                {
                                                                                    <a title="Visualizar" class="fa fa-camera fa-lg" href="~/PdfViewer/web/viewer.html?file=@(cond.EQAN_AQ_ARQUIVO.Replace("~", ""))&ReturnUrl=@Request.Url.AbsolutePath" target="_blank" ></a>
                                                                                }
                                                                                @Html.TableLinkDetails(cond.EQAN_CD_ID, "DownloadEquipamento", "fa-download", "Download")
                                                                            </td>
                                                                        </tr>
                                                                    }
                                                                </tbody>
                                                            </table>
                                                        }
                                                        <br />
                                                        @if (Model.EQUI_DT_BAIXA == null)
                                                        {
                                                            <div class="col-lg-12 col-md-12 col-xs-12">
                                                                <input style="float: left; margin-right: 5px;" type="file" name="file" id="file" class="btn btn-sm btn-warning" />
                                                                <input style="float: left; margin-right: 5px;" type="submit" value="Incluir Anexo" class="btn btn-sm btn-success" />
                                                            </div>
                                                        }
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @*Manutenções*@
                            <div id="tab-3" class="tab-pane">
                                <div class="panel-body">
                                    @using (Html.BeginForm("VoltarBaseEquipamento", "Equipamento", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id="pwd-container1" }))
                                    {
                                        if (Model.EQUIPAMENTO_MANUTENCAO != null && Model.EQUIPAMENTO_MANUTENCAO.Count > 0)
                                        {
                                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                                <thead style ="background-color:lightsteelblue">
                                                    <tr>
                                                        <th>Data</th>
                                                        <th>Responsável</th>
                                                        <th class="td-one-action">Ações</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var cond in (Model.EQUIPAMENTO_MANUTENCAO.OrderBy(x => x.FORNECEDOR.FORN_NM_NOME).ToList()))
                                                    {
                                                        <tr>
                                                            <td>@cond.EQMA_DT_MANUTENCAO.ToShortDateString()</td>
                                                            <td>@cond.FORNECEDOR.FORN_NM_NOME</td>
                                                            <td class="td-one-action">
                                                                @Html.TableLinkDetails(cond.EQMA_CD_ID, "VerManutencaoEquipamento","fa-edit", "Ver Dados da Manutenção")
                                                                @if (cond.EQMA_IN_ATIVO == 1)
	                                                            {
                                                                    <span style="color: #337ab7; cursor:pointer;" alt="Desativar" class="tbl-link fa-lg fa fa-trash-o" onclick="ShowModalExcluir('/Equipamento/ExcluirManutencao/@cond.EQMA_CD_ID')" title="Desativar"></span>
                                                                }
                                                                else
                                                                {   
                                                                    <span style="color: #337ab7; cursor:pointer;" alt="Desativar" class="tbl-link fa-lg fa fa-trash-o" onclick="ShowModalExcluir('/Equipamento/ReativarManutencao/@cond.EQMA_CD_ID')" title="Desativar"></span>
                                                                }
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        }
                                    }
                                    @if (Model.EQUI_DT_BAIXA == null)
                                    {
                                        <div class="form-group">
                                        @Html.ButtonLinkIndex(text: "Incluir Nova manutenção", action: "IncluirManutencao", controller: "Equipamento")
                                    </div>
                                    }
                                </div>
                            </div>

                            @*Observações*@
                            <div id="tab-4" class="tab-pane">
                                <div class="panel-body">
                                    @using (Html.BeginForm("EditarEquipamento", "Equipamento", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id="pwd-container1" }))
                                    {
                                        if (Model.EQUI_DT_BAIXA == null)
                                        {
                                            <div class="form-group">
                                                @Html.ButtonActionSubmit(text: "Confirma Edição", htmlAttributes: new { id = "basictoast" })
                                            </div>
                                        }
                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;"> 
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    @Html.HiddenFor(m => m.ASSI_CD_ID)
                                                    @Html.HiddenFor(m => m.CAEQ_CD_ID)
                                                    @Html.HiddenFor(m => m.EQUI_AQ_FOTO)
                                                    @Html.HiddenFor(m => m.EQUI_CD_ID)
                                                    @Html.HiddenFor(m => m.EQUI_DS_DESCRICAO)
                                                    @Html.HiddenFor(m => m.EQUI_DS_MOTIVO_BAIXA)
                                                    @Html.HiddenFor(m => m.EQUI_DT_BAIXA)
                                                    @Html.HiddenFor(m => m.EQUI_DT_CADASTRO)
                                                    @Html.HiddenFor(m => m.EQUI_DT_COMPRA)
                                                    @Html.HiddenFor(m => m.EQUI_DT_MANUTENCAO)
                                                    @Html.HiddenFor(m => m.EQUI_IN_ATIVO)
                                                    @Html.HiddenFor(m => m.EQUI_IN_AVISA_MANUTENCAO)
                                                    @Html.HiddenFor(m => m.EQUI_NM_NOME)
                                                    @Html.HiddenFor(m => m.EQUI_NR_NUMERO)
                                                    @Html.HiddenFor(m => m.EQUI_NR_VIDA_UTIL)
                                                    @Html.HiddenFor(m => m.EQUI_VL_VALOR)
                                                    @Html.HiddenFor(m => m.PERI_CD_ID)
                                                    Observações
                                                    @Html.TextAreaFor(m => m.EQUI_TX_OBSERVACOES, new { @class = "form-control", style = "width: 1040px; height: 400px;", autofocus = true})
                                                    @Html.ValidationMessageFor(m => m.EQUI_TX_OBSERVACOES, "",new { @style="color:red" })
                                                </div>
                                            </div>
                                        </div>
                                        if (Model.EQUI_DT_BAIXA == null)
                                        {
                                            <div class="form-group">
                                                @Html.ButtonActionSubmit(text: "Confirma Edição", htmlAttributes: new { id = "basictoast" })
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <br />
                    @Html.ButtonLinkIndex(text: "Voltar", action: "VoltarBaseEquipamento", controller: "Equipamento")
                </div>
            </div>
         </div>
    </div>
</div>

@section Styles {
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />  
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/jasnyBootstrapStyles")
    @Styles.Render("~/Content/plugins/iCheck/iCheckStyles")
    @Styles.Render("~/plugins/toastrStyles")
